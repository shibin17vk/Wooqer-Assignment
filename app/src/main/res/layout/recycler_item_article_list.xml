<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dp_2"
        android:background="@color/white"
        android:layout_margin="@dimen/dp_8"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/articlePanel"
                  android:padding="@dimen/dp_15"
                  android:layout_height="wrap_content">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">

            <com.webapp.wooqerassignment.widget.CustomTypeFacedTextView
                    android:layout_width="match_parent"
                    app:font="@string/app_font_regular"
                    android:textColor="@color/textColor"
                    android:layout_marginRight="@dimen/dp_35"
                    android:textSize="@dimen/text_14"
                    android:id="@+id/tvArticleTitle"
                    android:layout_height="wrap_content"/>


            <com.webapp.wooqerassignment.widget.CustomTypeFacedTextView
                    android:layout_width="wrap_content"
                    app:font="@string/app_font_semi_bold"
                    android:text="READ"
                    android:id="@+id/icReadStatus"
                    android:layout_gravity="right|center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_10"
                    android:layout_height="wrap_content"/>



        </FrameLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/dp_8"
                      android:layout_height="wrap_content">

            <com.webapp.wooqerassignment.widget.CustomTypeFacedTextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    app:font="@string/app_font_regular"
                    android:id="@+id/time"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

            <com.webapp.wooqerassignment.widget.CustomTypeFacedTextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/textColorSecondary"
                    android:id="@+id/score"
                    android:textSize="@dimen/text_12"
                    app:font="@string/app_font_regular"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <View android:layout_width="match_parent"
              android:background="@color/gray"
              android:layout_marginTop="@dimen/dp_10"
              android:layout_height="@dimen/dp_1"/>

        <FrameLayout android:layout_width="match_parent"
                     android:layout_marginTop="@dimen/dp_8"
                     android:orientation="horizontal"
                     android:layout_height="wrap_content">

            <ImageView android:layout_width="@dimen/dp_20"
                       android:src="@drawable/ic_forum"
                       android:tint="#757575"
                       android:layout_marginTop="@dimen/dp_1"
                       android:layout_height="@dimen/dp_20"/>

            <com.webapp.wooqerassignment.widget.CustomTypeFacedTextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    app:font="@string/app_font_regular"
                    android:text="Comments"
                    android:id="@+id/comments"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_14"
                    android:layout_height="wrap_content"/>

            <ImageView android:layout_width="@dimen/dp_20"
                       android:src="@drawable/ic_share_footer"
                       android:id="@+id/btnShare"
                       android:layout_gravity="right"
                       android:layout_marginTop="@dimen/dp_1"
                       android:layout_height="@dimen/dp_20"/>
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>