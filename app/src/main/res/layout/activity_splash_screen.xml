<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="com.webapp.wooqerassignment.SplashScreenActivity">

    <ImageView android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:layout_height="match_parent"/>


    <ImageView android:layout_width="@dimen/dp_70"
               android:layout_gravity="center"
               android:layout_height="@dimen/dp_70"
               android:layout_marginBottom="@dimen/dp_20"
               android:src="@drawable/logo"/>

    <com.webapp.wooqerassignment.widget.CustomTypeFacedTextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            app:font="@string/app_font_regular"
            android:textSize="@dimen/text_18"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/splash_screen_caption"
            android:layout_height="wrap_content"/>

</FrameLayout>
